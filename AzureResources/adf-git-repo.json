{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "factory-name": {
      "type": "string"
    },
    "tenant-id": {
      "type": "string"
    },
    "devops-organisation": {
      "type": "string"
    },
    "devops-project": {
      "type": "string"
    },
    "devops-repo": {
      "type": "string"
    }
  },
  "variables": {
    "location": "[resourceGroup().location]"
  },
  "resources": [
    {
      "type": "Microsoft.DataFactory/factories",
      "apiVersion": "2018-06-01",
      "name": "[parameters('factory-name')]",
      "location": "[variables('location')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "repoConfiguration": {
          "accountName": "[parameters('devops-organisation')]",
          "collaborationBranch": "master",
          "repositoryName": "[parameters('devops-repo')]",
          "rootFolder": "/DataFactory",
          "type": "FactoryVSTSConfiguration",
          "projectName": "[parameters('devops-project')]",
          "tenantId": "[parameters('tenant-id')]"
        }
      }
    }
  ]
}